apiVersion: policy.linkerd.io/v1beta1
kind: Server
metadata:
  namespace: linkerd-multicluster
  name: service-mirror-proxy-admin
  labels:
    linkerd.io/extension: multicluster
spec:
  podSelector:
    matchLabels:
      component: linkerd-service-mirror
